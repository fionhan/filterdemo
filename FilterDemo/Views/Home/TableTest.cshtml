@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TableTest</title>
    <style type="text/css">
        table.gridtable {
            font-family: verdana,arial,sans-serif;
            font-size: 11px;
            color: #333333;
            border-width: 1px;
            border-color: #666666;
            border-collapse: collapse;
        }

        table.gridtable th {
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #666666;
            background-color: #dedede;
        }

        table.gridtable td {
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #666666;
            background-color: #ffffff;
            text-align: center;
        }
    </style>

</head>
<body>
    <div>
        <table id="table" class="gridtable" width="100%">
            <caption style="font-size: 30px;">表格样式测试</caption>
            <tr>
                <th>Info Header 1</th>
                <th>Info Header 2</th>
                <th>Info Header 3</th>
            </tr>
            <tr>
                <td>Text 1A</td>
                <td>Text 1B</td>
                <td>Text 1C</td>
            </tr>
            <tr>
                <td>Text 2A</td>
                <td>Text 2B</td>
                <td>Text 2C</td>
            </tr>
            <tfoot>
                <tr>
                    <td style="border: none;background-color: #ffffff" colspan="2"></td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>
